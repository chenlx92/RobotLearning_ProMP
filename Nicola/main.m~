clc;close all;clear all; format compact;

%% Demostrations
num = 10; % # of demostrations
position = [1, 2.5, 3]; 
time = [0 30 60];  
[trajT, trajX] = trajGeneration(num,position,time);

%% Basis functions
n=100; % number of basis functions
sigma = 1.5; %variance
mu = linspace(0,max(time),n);

phi = zeros(n,length(trajT));
for i = 1:n 
    phi(i,:)=gaussBasis(trajT,mu(i),sigma); % one bf per row
    %phi(i,:)=phi(i,:)/sum(phi(i,:));
end

% Demostrations
plot(trajT,trajX,'k');hold on;grid on;

% Basis functions
plot(trajT,phi,'g');
 
%% Get weights
w = zeros(n,num);
for i = 1:num %For each demostration
    y = trajX(:,i);
    w(:,i) = pinv(phi')*y;
end

%% mean 
w_mean = mean(w,2);
mean_t = phi'*w_mean;

plot(trajT,mean_t,'LineWidth',2)

%% variance
Sigma_w=(1/length(w_mean))*()